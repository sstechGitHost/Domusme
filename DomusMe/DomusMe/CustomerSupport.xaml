<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DomusMe.CustomerSupport" BackgroundColor="#662e6b">
  <ContentPage.Content>
    <StackLayout  >
      <Label BackgroundColor="#badc02" HeightRequest="5"></Label>
      <StackLayout>
        <StackLayout Padding="20,20,20,20" >
          <StackLayout >
            <StackLayout>
              <Label Text="Customer Support" TextColor="White" XAlign="Center" Font="Bold,20"/>
              <Label BackgroundColor="#936c97" HeightRequest="1" ></Label>
              <StackLayout Spacing="45" Padding="0,20,0,0">
                <Label Text="Contact us for further assistance" TextColor="White" Font="None,20"/>
              </StackLayout>
              <StackLayout Padding="0,5,0,0" Spacing="15">
                <Button x:Name="btnCall" Text="Call" BackgroundColor="#badc02" TextColor="#662e6b"/>
                <Button x:Name="btnEmail" Text="Email" BackgroundColor="#badc02" TextColor="#662e6b"/>
                <Button x:Name="btnLink" Text="Link" BackgroundColor="#badc02" TextColor="#662e6b"/>
              </StackLayout>
            </StackLayout>
            <StackLayout>
            </StackLayout>
          </StackLayout>
        </StackLayout>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>